@model VetNet.Models.VeterinarskaSluzba

<h2 class="text-center">Detalji o veterinarskoj službi</h2>

<div class="sek-pozadina p-3">
    <h4 class="text-center">@Html.DisplayFor(model => model.naziv)</h4>
    <hr />
    <div class="row mb-3">
        <div class="col text-end">
            Adresa:
        </div>
        <div class="col">
            @Html.DisplayFor(model => model.adresa)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            Broj telefona:
        </div>
        <div class="col">
            @Html.DisplayFor(model => model.brojTelefona)
        </div>
    </div>
    <div class="row">
        <div class="col text-end">
            Email:
        </div>
        <div class="col text-black">
            @Html.DisplayFor(model => model.email)
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col text-start">
        <a asp-action="Edit" asp-route-id="@Model?.id" class="sek-pozadina text-dark add-new-button @if (User.IsInRole("Administrator")){
    @Html.Raw("visible")
;}else{
    @Html.Raw("invisible")
;}">Uredi veterinarsku službu</a>
    </div>
    <div class="col text-end">
        <a asp-action="Index" class="sek-pozadina text-dark add-new-button">Veterinarske službe</a>
    </div>
</div>

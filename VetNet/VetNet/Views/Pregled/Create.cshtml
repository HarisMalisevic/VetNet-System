@model VetNet.Models.Pregled

<h2 class="text-center">Dodaj pregled</h2>
<hr />
<div class="row sek-pozadina mb-3 justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3 mt-3">
                <input placeholder="" asp-for="datumVrijeme" class="form-control moj-outline" />
                <label asp-for="datumVrijeme" class="control-label"></label>
                <span asp-validation-for="datumVrijeme" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input placeholder="" asp-for="razlog" class="form-control moj-outline" />
                <label asp-for="razlog" class="control-label"></label>
                <span asp-validation-for="razlog" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input placeholder="" asp-for="postupak" class="form-control moj-outline" />
                <label asp-for="postupak" class="control-label"></label>
                <span asp-validation-for="postupak" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input placeholder="" asp-for="dijagnoza" class="form-control moj-outline" />
                <label asp-for="dijagnoza" class="control-label"></label>
                <span asp-validation-for="dijagnoza" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input placeholder="" asp-for="napomena" class="form-control moj-outline" />
                <label asp-for="napomena" class="control-label"></label>
                <span asp-validation-for="napomena" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="terapija" /> @Html.DisplayNameFor(model => model.terapija)
                </label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="LjubimacId" class ="form-control moj-outline" asp-items="ViewBag.LjubimacId"></select>
                <label asp-for="LjubimacId" class="control-label"></label>
            </div>
            <div class="form-floating mb-3 d-none">
                <select asp-for="KorisnikId" class="form-control moj-outline" asp-items="ViewBag.KorisnikId"></select>
                <label asp-for="KorisnikId" class="control-label"></label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Potvrdi" class="btn prim-pozadina moj-outline" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="sek-pozadina text-dark add-new-button">Pregledi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

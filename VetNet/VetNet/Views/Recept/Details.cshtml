@model VetNet.Models.Recept

<h2 class="text-center">Detalji o receptu</h2>

<div class="sek-pozadina p-3">
    <h4 class="text-center">@Html.DisplayFor(model => model.Ljubimac.ime)</h4>
    <hr />
    <div class="row mb-3">
        <div class="col text-end">
            @Html.DisplayNameFor(model => model.datumVrijeme)
        </div>
        <div class="col">
            @Html.DisplayFor(model => model.datumVrijeme)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            Aktivan
        </div>
        <div class="col">
            @Html.DisplayFor(model => model.otvoren)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            @Html.DisplayNameFor(model => model.lijek)
        </div>
        <div class="col">
            @Html.DisplayFor(model => model.lijek)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            @Html.DisplayNameFor(model => model.doza)
        </div>
        <div class="col text-black">
            @Html.DisplayFor(model => model.doza)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            @Html.DisplayNameFor(model => model.napomena)
        </div>
        <div class="col text-black">
            @Html.DisplayFor(model => model.napomena)
        </div>
    </div>
    <div class="row mb-3">
        <div class="col text-end">
            @Html.DisplayNameFor(model => model.Korisnik)
        </div>
        <div class="col text-black">
            @Html.DisplayFor(model => model.Korisnik.ime)
            @Html.Raw(" ")
            @Html.DisplayFor(model => model.Korisnik.prezime)
        </div>
    </div>
</div>  
<div class="row mt-3">
    <div class="col text-start">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="sek-pozadina text-dark add-new-button">Ažuriraj recept</a>
    </div>
    <div class="col text-end">
        <a asp-action="Index" class="sek-pozadina text-dark add-new-button">Recepti</a>
    </div>
</div>

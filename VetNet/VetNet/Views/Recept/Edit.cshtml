@model VetNet.Models.Recept

<h2 class="text-center">Ažuriraj recept</h2>
<hr />
<div class="row sek-pozadina mb-3 justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating mb-3 mt-3">
                <input asp-for="datumVrijeme" class="form-control" readonly/>
                <label asp-for="datumVrijeme" class="control-label"></label>
                <span asp-validation-for="datumVrijeme" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="lijek" class="form-control" readonly/>
                <label asp-for="lijek" class="control-label"></label>
                <span asp-validation-for="lijek" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="doza" class="form-control" />
                <label asp-for="doza" class="control-label"></label>
                <span asp-validation-for="doza" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="napomena" class="form-control" readonly/>
                <label asp-for="napomena" class="control-label"></label>
                <span asp-validation-for="napomena" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LjubimacId" class="form-control" readonly hidden/>
                <select asp-for="LjubimacId" class="form-control" asp-items="ViewBag.LjubimacId" disabled></select>
                <label asp-for="LjubimacId" class="control-label"></label>
                <span asp-validation-for="LjubimacId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="KorisnikId" class="form-control" readonly hidden/>
                <select asp-for="KorisnikId" class="form-control" asp-items="ViewBag.KorisnikId" disabled></select>
                <label asp-for="KorisnikId" class="control-label"></label>
                <span asp-validation-for="KorisnikId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Potvrdi" class="btn prim-pozadina moj-outline" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="sek-pozadina text-dark add-new-button">Recepti</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
